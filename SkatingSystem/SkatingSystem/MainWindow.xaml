        <TextBox x:Name="Patronymic" HorizontalAlignment="Left" Margin="831,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="763,17,0,0" VerticalAlignment="Top"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="789,54,0,0" VerticalAlignment="Top"/>
